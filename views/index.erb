<html>
  <head>
    <% if @way_too %>
      <style>
      body {
        background: red;
        }
      </style>
    <% elsif @wrong %>
    <style>
      body {
        background: lightcoral;
      }
    </style>
    <% elsif @correct %>
    <style>
      body {
        background: green;
      }
    </style>
    <% end %>
  </head>
  <body>
    <form>
      <input type='text' name='guess' />
      <input type='submit' value='Guess!' />
    </form>
    <p>
      <%= message %>
    </p>
    <% if @correct %>
      <p>
        The SECRET NUMBER is <%= number %>
      </p>
    <% end %>
  </body>
</html>
